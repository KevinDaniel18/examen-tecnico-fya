generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Credit {
  id           Int      @id @default(autoincrement())
  clientName   String
  clientId     String
  creditValue  Decimal  @db.Decimal(15, 2)
  interestRate Float
  termMonths   Int
  salesRepId   Int
  salesRep     User     @relation(fields: [salesRepId], references: [id])
  createdAt    DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  credits   Credit[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
